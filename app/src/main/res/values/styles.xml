<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Enable drawing behind the status and navigation bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- If using dark mode, set light status bar icons accordingly -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="BlueButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
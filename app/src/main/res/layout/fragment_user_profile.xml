<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F0F0">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Edit profile"
        android:textColor="@color/blue"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Career Connect"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="@color/blue"
        android:textSize="15dp" />

    <!-- Name EditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_outline_box"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue"
            android:textSize="15dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="@color/blue"
        android:textSize="15dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_outline_box"
            android:hint="email@email.com"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue"
            android:textSize="15dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textColor="@color/blue"
        android:textSize="15dp" />



    <!-- New Password EditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue">

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_outline_box"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue"
            android:textSize="15dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Confirm New Password"
        android:textColor="@color/blue"
        android:textSize="15dp" />


    <!-- Confirm Password EditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue">

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_outline_box"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue"
            android:textSize="15dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Company / Other Affiliation"
        android:textColor="@color/blue"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blue"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/blue"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/signup_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_outline_box"
            android:hint="Your Company"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blue"
            android:textSize="15dp"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opt in as a "
            android:textColor="@color/blue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/signup_referer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/referer_text"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/opt_in_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:gravity="end"
                app:trackDecorationTint="@color/yellow"
                app:thumbTint="@drawable/switch_thumb_selector"
                app:trackTint="@drawable/switch_track_selector"
                android:scaleX="0.9"
                android:scaleY="0.75"/>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/blue_dashed_line" />


    <!-- Edit and Save Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit"
        android:background="@drawable/blue_button"
        android:padding="8dp" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        android:contentDescription="Save"
        android:background="@drawable/blue_button"
        android:tint="#4CAF50"
        android:padding="8dp" />
    </LinearLayout>

</LinearLayout>
